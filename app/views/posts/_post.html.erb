<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>


    <% post.files.each do |file| %>
      <p>
        <% if file.previewable? %>
          <% prev =  file.preview(resize: '400x300') %>
          <%= image_tag(prev.url) %>
        <% else %>
          <%= link_to (image_tag file, size: '400x300'), file, target: :blank %>
        <% end %>
      </p>
    <% end %>

</div>
